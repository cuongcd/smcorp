    <?php if(count($tabs->getJsParams())): ?>
        <script type="text/javascript">
            <?php foreach($tabs->getJsParams() as $key => $value): ?>
            var <?php echo e($key); ?> = '<?php echo e($value); ?>';
            <?php endforeach; ?>
        </script>
    <?php endif; ?>
